/*
 * float, double, int로 입력받은 한 자리 자연수를 String으로 변환하는 메소드
 */
import java.util.Scanner;
public class ChangeString {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		
		System.out.print("변환하고자 하는 한자리 자연수를 입력하세요(float형태): ");
		float inputF = scan.nextFloat();
		System.out.print("변환하고자 하는 한자리 자연수를 입력하세요(double형태): ");
		double inputD = scan.nextDouble();
		System.out.print("변환하고자 하는 한자리 자연수를 입력하세요(int형태): ");
		int inputI = scan.nextInt();
		
		System.out.println();
		System.out.println("converted to " + inputF + " " + inputD + " " + inputI);
		System.out.println("float: " + convertStr(inputF) + "  double: " + convertStr(inputD) + "  int: " + convertStr(inputI));
	}
	static String convertStr(float i) {
		String str = String.valueOf(i);
		return str;
	}
	static String convertStr(double i) {
		String str = String.valueOf(i);
		return str;
	}
	static String convertStr(int i) {
		String str = String.valueOf(i);
		return str;
	}
}
